<!DOCTYPE html>
<html lang="en">

    <%- include("partials/head.ejs") %>

<!-- Index Body -->

<body>

    <style>
        h1 {
            font-size: 45px;
        }
        h4 {
            margin: 0 -10px 10px;
        }
    </style>

    <h1 class="welcome2">MoonSol Organics</h1><br>

    <nav>
        <a href="/drink/new" style="text-decoration: none"><button id="newitem">New Item</button></a> 
    </nav><hr><br>
    
    
    <div class="drink-container">
        
        <%  for (let i = 0; i < drink.length; i++) { %> 
   
        <div class="card">
            <h4><%= drink[i].name %><h4> <h6>$<%= drink[i].price %></h6>

            <a href="/drink/<%= drink[i].id %> "><img src="<%= drink[i].img %>" alt=""></a><br>
            
            <div class="buttons">

            <!-- Edit Link Button -->

            <a href="/drink/<%= drink[i].id %>/edit"><button id="edit">Edit</button></a><br>

            </div>
            <br>
        </div>

        <% } %> 
    
    </div>
    <hr>
    <p class="footer">MoonSol Organics</p>
    
</body>
</html>